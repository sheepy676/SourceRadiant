<?xml version="1.0"?>
<!--
build variables
[RadiantPath]: path to Radiant .. C:/Projects/Source/Tools/SourceRadiant
[CopyCommand]: copy command .. copy
[EnginePath]: path to the engine .. C:/Program Files (x86)/Steam/steamapps/common/Half-Life 2/
[ExecutableType]: Radiant executable suffix .. exe
[GamePath]: game folder path .. C:/Program Files (x86)/Steam/steamapps/common/Half-Life 2/hl2/
[GameName]: game folder name .. hl2
[MapsPath]: game maps path .. C:/Program Files (x86)/Steam/steamapps/common/Half-Life 2/hl2/maps/
[MapFile]: vmf file path .. C:/Projects/Source/Maps/mymap.vmf
[BspFile]: bsp file path .. C:/Projects/Source/Maps/mymap.bsp
[MapName]: vmf file name .. mymap.vmf
-->
<project version="2.0">
  <var name="BspExecutable">"[RadiantPath]/ericw-tools/qbsp" -nocolor -hlbsp -path "[GamePath]"</var>
  <var name="VisExecutable">"[RadiantPath]/ericw-tools/vis" -nocolor</var>
  <var name="RadExecutable">"[RadiantPath]/ericw-tools/light" -nocolor -path "[GamePath]"</var>
  <build name="Default">
       <command>[BspExecutable] "[MapFile]" "[BspFile]"</command>
       <command>[VisExecutable] "[BspFile]"</command>
       <command>[RadExecutable] "[BspFile]"</command>
       <command>[CopyCommand] "[BspFile]" "[MapsPath]"</command>
  </build>
  <build name="Fast">
       <command>[BspExecutable] "[MapFile]" "[BspFile]"</command>
       <command>[VisExecutable] -fast "[BspFile]"</command>
       <command>[RadExecutable] -fast "[BspFile]"</command>
       <command>[CopyCommand] "[BspFile]" "[MapsPath]"</command>
  </build>
  <build name="Extra">
       <command>[BspExecutable] "[MapFile]" "[BspFile]"</command>
       <command>[VisExecutable] "[BspFile]"</command>
       <command>[RadExecutable] -extra4 "[BspFile]"</command>
       <command>[CopyCommand] "[BspFile]" "[MapsPath]"</command>
  </build>
</project>
